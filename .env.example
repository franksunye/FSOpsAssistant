# FSOA Configuration Example
# Copy this file to .env and fill in your actual values

# DeepSeek LLM Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Metabase Configuration
METABASE_URL=http://your-metabase-server:3000
METABASE_USERNAME=your_metabase_username
METABASE_PASSWORD=your_metabase_password
METABASE_DATABASE_ID=1

# WeChat Work Webhook Configuration
# Multiple webhooks separated by commas
WECHAT_WEBHOOK_URLS=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=webhook1,https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=webhook2

# Database Configuration
DATABASE_URL=sqlite:///fsoa.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fsoa.log

# Agent Configuration
AGENT_EXECUTION_INTERVAL=60  # minutes
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=300  # seconds

# LLM Configuration
USE_LLM_OPTIMIZATION=true
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# Notification Configuration
NOTIFICATION_COOLDOWN=30  # minutes
MAX_NOTIFICATIONS_PER_HOUR=10
ESCALATION_THRESHOLD_HOURS=4

# Development Configuration
DEBUG=False
TESTING=False
