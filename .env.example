# FSOA Configuration Example
# Copy this file to .env and fill in your actual values

# DeepSeek LLM Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Metabase Configuration
METABASE_URL=http://your-metabase-server:3000
METABASE_USERNAME=your_metabase_username
METABASE_PASSWORD=your_metabase_password
METABASE_DATABASE_ID=1

# WeChat Work Configuration
# Note: WeChat webhook configuration has been moved to config/wechat_groups.json
# Please use [系统管理 → 企微群配置] in the web interface to configure webhooks

# Database Configuration
DATABASE_URL=sqlite:///fsoa.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fsoa.log

# Agent Configuration (values in minutes/seconds as noted in comments)
AGENT_EXECUTION_INTERVAL=60
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=300

# LLM Configuration
USE_LLM_OPTIMIZATION=true
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# Notification Configuration (values in minutes/hours as noted in comments)
NOTIFICATION_COOLDOWN=30
MAX_NOTIFICATIONS_PER_HOUR=10
ESCALATION_THRESHOLD_HOURS=4

# Development Configuration
DEBUG=False
TESTING=False
